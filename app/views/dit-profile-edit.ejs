<%
var css = [
  '/css/header.css',
  '/css/dit-profile.css',
  '/css/tag-elem.css'
];
var title = '*' + data.name ;

var headScripts = [];
var scripts = [];

%><% include ./partial/page-top.ejs %>
<% include ./partial/header.ejs %>

<style>
  div.logo {
    background-image: url('/<%= data.form %>/<%= data.url %>/logo');
    background-repeat: no-repeat;
    background-size: contain;
    height:64px;
    width:64px;
  }
</style>
<form method="post" >
<div class="panel-basic" ><!-- basic dit info -->
  <div class="logo" >change dit logo</div>
  <div>type
    <select name="form">
      <option value="unspecified">unspecified</option>
      <option <% if (data.form === 'idea') { %> selected="selected"<% } %> value="idea">idea</option>
      <option <% if (data.form === 'project') { %> selected="selected"<% } %> value="project">project</option>
      <option <% if (data.form === 'challenge') { %> selected="selected"<% } %> value="challenge">challenge</option>
      <option <% if (data.form === 'interest') { %> selected="selected"<% } %> value="interest">interest</option>
    </select>
  </div>
  <div><%= data.created %></div>
</div>
<div class="panel-info"><!--  -->
  <div>
    <span class="profile-name" ><input type="text" name="name" placeholder="dit name" value="<%= data.name %>" /></span>
    <span class="data-url"><%= data.url %></span>
    <span>
      <a class="button" href="/dit/<%= data.url %>">Cancel</a>
      <input class="button" type="submit" name="submit" value="Save Changes" />
    </span>
  </div>
  <div>
    <input type="text" name="summary" placeholder="short summary" value="<%= data.summary %>" />
  </div>
  <div><!-- tags -->
    <ul id="tag-list">
      <li><span class="tag" ></span></li>
      <li><span class="tag" ></span></li>
      <li><span class="tag" ></span></li>
    </ul>
  </div>
  <div class="top-menu">
  <a href="about">about</a>
  <a href="people">people</a>
  <a href="brainstorm">brainstorm</a>
  <a href="gtd">GTD</a>
  <% if (rights.edit === true) { %><a href="edit">edit</a><% } %>
  <a href="">...</a>
  </div>
  <div class="about" ><h1>about</h1>
    <div>
      <textarea name="about" placeholder="description" ><%= data.about %></textarea>
    </div>
  </div>
</div>
</form>
